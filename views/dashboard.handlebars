<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 mx-2 h1"><strong>My Dashboard</strong></span>
  </div>
</nav>

<div class="my-5 d-grid gap-3">

  {{#each posts as |post| }}
  <div class="card shadow mx-auto" style="width: 85%;">
    <div class="card-header d-flex justify-content-between">
      <a href="/posteditor/{{post.id}}" class="h5 mb-0" style="text-decoration: none;"><strong>{{post.title}}</strong></a>
      <div>{{format_date post.date_created}}</div>
    </div>
  </div>
  {{/each}}

  <div class="mx-auto mt-5">
    <a class="btn btn-primary" href="/createpost"><i class="bi bi-plus-lg"></i> Create New Post</a>
  </div>

</div>